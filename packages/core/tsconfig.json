{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "removeComments": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "resolveJsonModule": true
  },

  "include": [
    "src/**/*"
  ],
  
  "exclude": [
    "node_modules",
    "dist"
  ]
}
