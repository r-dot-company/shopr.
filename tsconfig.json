{
    "compilerOptions": {
      "target": "ESNext",
      "module": "CommonJS",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "removeComments": true,
      "experimentalDecorators": true,
      "outDir": "dist",
      "resolveJsonModule": true
    },
  
    "include": [
      "src/**/*"
    ],
    
    "exclude": [
      "node_modules",
      "dist"
    ]
  }
